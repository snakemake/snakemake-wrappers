rule genomepy:
    output:
        "{assembly}/{assembly}.fa"
        "{assembly}/{assembly}.fa.fai"
        "{assembly}/{assembly}.fa.sizes"
        "{assembly}/{assembly}.gaps.bed"
        "{assembly}/{assembly}.annotation.gtf"
    log:
        "logs/genomepy_{assembly}.log"
    params:
        provider="UCSC"  # optional, choose from uccs, ensembl, and ncbi
    wrapper:
        "master/bio/genomepy"
