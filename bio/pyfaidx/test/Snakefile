rule test_pyfaidx_out_fasta:
    input:
        fasta="sequence.fasta",
        bed="interval.bed",
    output:
        "retrieved.fasta",
    threads: 1
    log:
        "test_pyfaidx.log",
    params:
        extra="",
        regions="",
    wrapper:
        "master/bio/pyfaidx"


rule test_pyfaidx_index_fasta:
    input:
        fasta="sequence.fasta",
        bed="interval.bed",
    output:
        "sequence.fasta.fai",
    params:
        extra="",
        regions="",
    log:
        "test_pyfaidx_index_fasta.log",
    wrapper:
        "master/bio/pyfaidx"


rule test_pyfaidx_out_sizes:
    input:
        fasta="sequence.fasta",
        bed="interval.bed",
    output:
        "retrieved.chrom",
    params:
        extra="",
        regions="",
    log:
        "test_pyfaidx_out_sizes.log",
    wrapper:
        "master/bio/pyfaidx"


rule test_pyfaidx_out_bed:
    input:
        fasta="sequence.fasta",
        bed="interval.bed",
    output:
        "retrieved.bed",
    params:
        extra="",
        regions="",
    log:
        "test_pyfaidx_out_bed.log",
    wrapper:
        "master/bio/pyfaidx"


rule test_pyfaidx_fetch_regions:
    input:
        fasta="sequence.fasta",
        bed="interval.bed",
    output:
        "regions.fa",
    params:
        extra="",
        regions="seq1",
    log:
        "test_pyfaidx_out_bed.log",
    wrapper:
        "master/bio/pyfaidx"
