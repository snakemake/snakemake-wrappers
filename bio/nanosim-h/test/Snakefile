rule nanosimh:
    input:
        fasta="{sample}.fa",
        #profile_dir="profile/" optional: you can train your own profiles with nanosim-h-train
    output:
        reads = "{sample}.simulated.fa",
        log = "{sample}.simulated.log",
        errors = "{sample}.simulated.errors.txt"
    params:
        extra = "",
        num_reads = 10,
        perfect_reads = True,
        min_read_len = 10,
    log:
        "logs/nanosim-h/test/{sample}.log"
    wrapper:
        "master/bio/nanosim-h"
