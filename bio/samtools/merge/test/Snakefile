rule samtools_merge:
    input:
        ["mapped/A.bam", "mapped/B.bam"],
    output:
        "merged.bam",
    params:
        "",  # optional additional parameters as string
    # Samtools takes additional threads through its option -@
    threads: 8  # This value - 1 will be sent to -@
    wrapper:
        "master/bio/samtools/merge"
