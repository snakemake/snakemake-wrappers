rule bwa_mem2_index:
    input:
        "{genome}"
    output:
        "{genome}.0123",
        "{genome}.amb",
        "{genome}.ann",
        "{genome}.bwt.2bit.64",
        "{genome}.bwt.8bit.32",
        "{genome}.pac",
    log:
        "logs/bwa-mem2_index/{genome}.log"
    params:
        prefix="{genome}"
    wrapper:
        "master/bio/bwa-mem2/index"