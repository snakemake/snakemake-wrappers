        sort_order="queryname",                      # optional: Sort by 'queryname' or 'coordinate'
        sort_extra=""                                # optional: extra arguments for samtools/picard
    log:
        "logs/bwa_sam_se/{sample}.picard_sort.log"
    wrapper:
        "master/bio/bwa/samxe"

