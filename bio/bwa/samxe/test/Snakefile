    output:
        "mapped/{sample}.se.sam",
    params:
        extra=r"-r '@RG\tID:{sample}\tSM:{sample}'",  # optional: Extra parameters for bwa.
        sort="none",
    log:
        "logs/bwa_sam_se/{sample}.log",
    wrapper:
        "master/bio/bwa/samxe"


