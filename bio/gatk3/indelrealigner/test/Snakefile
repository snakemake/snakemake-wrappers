rule indelrealigner:
    input:
        bam="mapped/{sample}.bam",
        ref="genome.fasta",
        known="dbsnp.vcf.gz",
        target_intervals="{sample}.intervals"
    output:
        bam="realigned/{sample}.bam"
    log:
        "logs/gatk3/indelrealigner/{sample}.log"
    params:
        extra="",  # optional
    resources:
        mem_mb = 1024
    threads: 16
    wrapper:
        "bio/gatk/indelrealigner"
